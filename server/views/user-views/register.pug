extends ../base

block app-title
    | Register

block content
    .row
        .col-lg-6.col-lg-offset-3.col-md-6.col-md-offset-3.col-sm-offset-2.col-sm-8.col-xs-10.col-xs-offset-1
            #register-form.form.form-horizontal.form-container
                fieldset
                    .form-group
                        label.col-lg-4.control-label(for="tb-first-name") First Name
                        .col-lg-8
                            input.form-control(type="text", id="tb-first-name", name="firstName", placeholder="First Name", value=firstName)
                    .form-group
                        label.col-lg-4.control-label(for="tb-last-name") Last Name
                        .col-lg-8
                            input.form-control(type="text", id="tb-last-name", name="lastName", placeholder="Last name", value=lastName)
                    .form-group
                        label.col-lg-4.control-label(for="tb-username") Username
                        .col-lg-8
                            input.form-control(type="text", id="tb-username", name="username", placeholder="Username", value=username)
                    .form-group
                        label.col-lg-4.control-label(for="tb-email") Email
                        .col-lg-8
                            input.form-control(type="text", id="tb-email", name="email", placeholder="Email Address", value=email)
                    .form-group
                        label.col-lg-4.control-label(for="tb-password") Password
                        .col-lg-8
                            input.form-control(type="password", id="tb-password", name="password", placeholder="Password", value=password)
                    .form-group
                        label.col-lg-4.control-label(for="tb-confirm-password") Confirm password
                        .col-lg-8
                            input.form-control(type="password", id="tb-confirm-password", name="confirmPassword", placeholder="Confirm password", value=confirmPassword)
                    .form-group
                        .col-lg-8.col-lg-offset-4
                            input.btn.btn-sm.btn-primary.btn-lg.btn-block(type="submit", id="tb-register" value="Register")

    script(src="/scripts/utils/requester.js")
    script(src="/scripts/utils/notificator.js")
    script(src="/scripts/utils/constants.js")
    script(src="/scripts/utils/validator.js")
    script(src="/scripts/user/register-ajax.js")
